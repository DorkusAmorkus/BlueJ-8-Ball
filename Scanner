
//// This is an example of using a folder to hold a file that is accessed.
//// You need to make a folder in the same directory as this script called test.
//// Put the BOB.txt file in the test directory. 


import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

import java.util.ArrayList;
import java.util.Random;



public class ScannerExamplefromfile {

    public static void main(String args[]) throws FileNotFoundException {
        Random random = new Random();
        //creating File instance to reference text file in Java
        File text = new File("test/Die.txt");
        
        Scanner keyBoard = new Scanner(System.in);
        
        ArrayList<String> txtfromFile =new ArrayList(); // create a array

        //Creating Scanner instnace to read File in Java
        Scanner scnr = new Scanner(text);
     
        //Reading each line of file using Scanner class
        int lineNumber = 1;
        
        while(scnr.hasNextLine()){
            String line = scnr.nextLine();
            txtfromFile.add(line);
            
            //System.out.println("line " + lineNumber + " :" + line);
            //lineNumber++;
        }      
        
        ////////// add your random int generator here
        int randomInteger = random.nextInt(14); // the value shoud be the max number of 
                                                //lines in your txtfile
        System.out.println(txtfromFile.get(randomInteger));
        
    }  
 
}
