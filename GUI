                contentPane.setPreferredSize(new Dimension(500,400));
                contentPane.setBackground(new Color(192,192,192));
                
                // The JFrame is a container to which the panel is added
                this.add(contentPane);

                // some lines removed ...

                // The JFrame must be visible to the user
                this.setVisible(true);
                
            }
            
            //method for generate menu
            public void generateMenu(){ menuBar = new JMenuBar(); 
                // some lines removed ...
            }
            
            // the main() method creates a running GUI
            public static void main(String[] args){
                System.setProperty("swing.defaultlaf",
                "com.sun.java.swing.plaf.nimbus.NimbusLookAndFeel");
                javax.swing.SwingUtilities.invokeLater(new Runnable () {
